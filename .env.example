# Telegram API credentials (get from https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890

# OpenAI API key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Wizard Bot Token (for setup wizard bot)
WIZARD_BOT_TOKEN=your_wizard_bot_token_here

# Bot configuration
BOT_COMMAND_PREFIX=.ascl
BOT_ANSWER_PREFIX=.ans
BOT_AUTO_ANSWER_PREFIX=.aans
BOT_MANUAL_ANSWER_PREFIX=.mans
BOT_PREFERENCE_PREFIX=.pref
MAX_QUESTION_LENGTH=500
RESPONSE_TIMEOUT=30
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# Chat analysis settings
CHAT_HISTORY_LIMIT=10
MIN_OWNER_MESSAGES=3
MAX_STYLE_SAMPLE_LENGTH=2000

# Message settings
INFO_MESSAGE_DELETE_DELAY=5

# Typing simulation settings
TYPING_SPEED_WPM=60
TYPING_MIN_DELAY=1.0
TYPING_MAX_DELAY=8.0
TYPING_VARIATION=0.3
TYPING_PAUSE_CHANCE=0.2

# Preference settings
MAX_PREFERENCE_LENGTH=200
PREFERENCES_FILE=user_preferences.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=bot.log
